# Development Environment Configuration

NODE_ENV=development
LOG_LEVEL=debug
PORT=3000
SERVER_NAME=financial-data-server
SERVER_VERSION=1.0.0

# Mock settings for development
MOCK_DATA_PROVIDERS=true
DEBUG=financial-data-server:*

# Redis (use local Redis or Docker)
REDIS_URL=redis://localhost:6379

# Development OAuth (use test credentials)
OAUTH_CLIENT_ID=dev-client-id
OAUTH_CLIENT_SECRET=dev-client-secret
OAUTH_ISSUER_URL=http://localhost:8080/auth
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Development API keys (use free tier keys)
ALPHA_VANTAGE_API_KEY=demo

# Rate limiting (more lenient for development)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_PER_USER=500

# Security (development only - not secure)
JWT_SECRET=dev-jwt-secret-not-for-production
ENCRYPTION_KEY=dev-encryption-key-32-chars-long!

# Caching (shorter TTL for development)
CACHE_TTL=60000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091